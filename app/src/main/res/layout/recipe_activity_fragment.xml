        <!--android:textSize="20dp" />-->

        <!--</LinearLayout>-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tagTextView"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/foodTag"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/food_tag"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tagTextView"
                android:textSize="20dp" />

            <Button
                android:id="@+id/tagDelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/delete_tag"
                android:textStyle="italic|bold" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/detail_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_btn"
                android:textStyle="italic|bold" />

            <Button
                android:id="@+id/statTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/detail_delete_button"
                android:text="@string/tag_stat" />

            <Button
                android:id="@+id/nutritionTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tagEditTxt"
                android:text="@string/nutritionTag"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/tagEditTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:hint="@string/tagEditTxt" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>